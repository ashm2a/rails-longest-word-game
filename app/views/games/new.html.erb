<h1> New Game </h1>
<h2 class = "container">
  <%@letters.each do |l|%>
    <div class="btn btn-primary"><%=l%></div>
  <%end%></h2>
<form action="score" method= "POST" data-turbo="false"
class = "container mx-auto">
  <label for="">What is the longest word you can find ?</label>
  <input type="text" name="word">
  <input type="submit" value="play" class ="btn btn-primary">
 
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

</form>
